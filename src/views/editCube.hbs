<main>
    <h1>Edit Cube</h1>
    <div class="form">
        <form method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value={{cube.name}}>
            <label for="description">Description</label>
            <textarea id="description" name="description">{{cube.description}} </textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value={{cube.imageUrl}}>
            <label for="difficulty">Difficulty</label>
            <select id="difficulty" name="difficultyLevel" />


           
                <option value="1" {{#if selectedOptions.veryEasy}} selected  {{/if}}>1 - Very Easy</option>
                <option value="2" {{#if selectedOptions.easy}} selected {{/if}} >2 - Easy</option>
                <option value="3" {{#if selectedOptions.medium}} selected  {{/if}} >3 - Medium (Standard 3x3)</option>
                <option value="4" {{#if selectedOptions.intermediate}} selected  {{/if}} >4 - Intermediate</option>
                <option value="5" {{#if selectedOptions.expert}} selected  {{/if}} >5 - Expert</option>
                <option value="6" {{#if selectedOptions.hardcore}} selected  {{/if}} >6 - Hardcore</option>
            </select>




            </select>
            <input type="submit" value="Edit">
        </form>
    </div>
</main>